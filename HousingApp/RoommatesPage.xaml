<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HousingApp.RoommatesPage"
             BackgroundColor="#F6F8FA">
  <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="16">
      <Label Text="Roommates" FontSize="24" FontAttributes="Bold"/>
      <HorizontalStackLayout Spacing="12">
        <Frame WidthRequest="60" HeightRequest="60" CornerRadius="30">
          <Label Text="J" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>
        <Frame WidthRequest="60" HeightRequest="60" CornerRadius="30">
          <Label Text="T" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>
        <Frame WidthRequest="60" HeightRequest="60" CornerRadius="30">
          <Label Text="S" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>
      </HorizontalStackLayout>

      <Label Text="Quick reminders" FontAttributes="Bold"/>
      <Frame CornerRadius="14">
        <Label Text="Please clean your dishes "/>
      </Frame>
      <Frame CornerRadius="14">
        <Label Text="Take out the trash "/>
      </Frame>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
